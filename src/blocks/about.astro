---
import { Icon } from 'astro-icon/components';
import Link from '../components/Link.astro';
---

<section class='about' id='about'>
  <div class='about-container'>
    <div class='image-container'>
      <div class='image-holder'>
        <img src='/images/profile.jpeg' alt='Profile image' />
      </div>
    </div>
    <div class='text-content'>
      <div>
        <h2 class='component-heading'>&lt; About me /&gt;</h2>
        <h4>Hello world!</h4>
        <p>
          My name is <b>Ricardo Alvarez-Correa Mercado</b>.
          <br />I am a <strong>Fullstack developer</strong> with over <strong>5 years of experience</strong>
        </p>
        <p class='tech-stack-heading'>My main tech stack is:</p>

        <ul class='tech-stack'>
          <li>
            <Icon name='devicon:nodejs' />
            <span>NodeJs</span>
          </li>
          <li>
            <Icon name='devicon:mongodb' />
            <span>MongoDB</span>
          </li>
          <li>
            <Icon name='devicon:postgresql' />
            <span>PostgreSQL</span>
          </li>
          <li>
            <Icon name='devicon:nextjs' />
            <span>NextJs</span>
          </li>
          <li>
            <Icon name='devicon:express' />
            <span>Express</span>
          </li>
        </ul>

        <p class='tech-stack-heading'>Also worked with:</p>

        <ul class='tech-stack'>
          <li>
            <Icon name='devicon:rust' />
            <span>Rust</span>
          </li>
          <li>
            <Icon name='devicon:redis' />
            <span>Redis</span>
          </li>
          <li>
            <Icon name='devicon:astro' />
            <span>Astro</span>
          </li>
          <li>
            <Icon name='devicon:nestjs' />
            <span>NestJs</span>
          </li>
          <li>
            <Icon name='devicon:python' />
            <span>Python</span>
          </li>
          <li>
            <Icon name='devicon:dynamodb' />
            <span>DynamoDB</span>
          </li>
        </ul>

        <Link
          text='Connect with me on LinkedIn'
          className='linkedin-btn'
          icon='linkedin'
          href='https://www.linkedin.com/in/ralvarezcorrea/'
          target='_blank'
        />
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    position: relative;
    width: 100%;

    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid hsla(0, 0%, 90%, 0.3);

    padding-top: 20px;
    height: 100%;
    max-height: none;
  }

  .about-container {
    position: relative;
    container-name: about-container;
    display: flex;

    flex-direction: column;
    width: 1200px;
  }

  .image-container {
    position: relative;
    width: 100%;
  }

  .image-holder {
    display: block;
    position: relative;
    max-height: 370px;
    max-width: 370px;
    height: 90vw;
    width: 90vw;
    border-radius: 100%;
    border: 2px solid hsla(83, 20%, 76%);
    box-shadow: 0px 6px 10px 4px hsla(0, 0%, 0%, 0.09);
    margin: auto;
    overflow: clip;
    transition: 0.5s ease-in-out;
  }

  .image-holder > img {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    display: block;
    width: 100%;
    height: 100%;
  }

  .text-content {
    display: flex;
    width: 100%;
    padding: 20px;
  }

  .text-content > div > h4 {
    margin-bottom: 20px;
  }

  .text-content > div > p {
    margin-bottom: 20px;
  }

  .text-content > div > .tech-stack-heading {
    margin-bottom: 10px;
  }

  .text-content > div > .tech-stack {
    display: flex;
    flex-wrap: wrap;
    padding-right: 40px;
    margin-bottom: 20px;
    overflow: hidden;
  }

  .text-content > div > .tech-stack > li {
    display: flex;
    width: fit-content;
    justify-content: center;
    align-items: center;
    margin-right: 20px;
    margin-bottom: 14px;
    font-size: 1.8rem;
  }

  .text-content > div > .tech-stack li > span {
    margin-left: 10px;
    font-size: 1rem;
  }

  @media (min-width: 768px) {
    .about {
      height: 100vh;
      max-height: 600px;
    }
    .image-container {
      width: 50%;
    }
    .about-container {
      flex-direction: row;
    }
    .text-content {
      padding: 0px;
      width: 50%;
    }
  }
</style>
