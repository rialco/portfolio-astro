---
import { type Card } from './types/blogCard';

interface Props extends Card {}

const { title, description, imagePath, technologies, link } = Astro.props;
---

<div class='wrapper'>
  <div class='card'>
    <img src={imagePath} alt='Temporary' />
    <div class='project-info'>
      <h2>{title}</h2>
      <p>{description}</p>
      <div class='pills-container'>
        {technologies.map((tech, idx) => (idx < 4 ? <span class='pill'>{tech}</span> : null))}
        {technologies.length > 4 ? <span class='pill'> + others </span> : null}
      </div>
      <a href={link}>Leer mas</a>
    </div>
  </div>
  <div class='separator'></div>
</div>

<style>
  .wrapper {
  }

  .card {
    position: relative;
    max-width: 1200px;

    display: flex;
    gap: 20px;

    margin: auto;
    overflow: hidden;
    transition: ease-in-out 0.5s;
    cursor: pointer;
  }

  .card img {
    width: 30%;
  }

  .project-info h2 {
    font-weight: 600;
    font-size: 1.6em;
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .project-info {
    position: relative;
  }

  .pills-container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    padding: 20px;
  }

  .pill {
    background-color: white;
    font-size: 0.8em;
    margin-bottom: 4px;
    margin-right: 6px;
    display: block;
    border-radius: 20px;
    border: 1px solid hsl(210, 69%, 48%);
    color: hsl(210, 69%, 48%);
    padding: 4px 10px;
  }

  .card:hover {
  }

  .wrapper .separator {
    margin-top: 20px;
    width: 100%;
    height: 1px;
    background-color: hsl(0, 0%, 90%);
  }
</style>
