---
import Card from './Card.astro';

interface Card {
  project: string;
  imagePath: string;
}

interface Props {
  cards: Card[];
}

const { cards } = Astro.props;
---

<div class='grid-container'>
  {cards.map((card) => <Card project={card.project} imagePath={card.imagePath} />)}
</div>

<style>
  .grid-container {
    width: 1200px;
    position: relative;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    column-gap: 20px;
    row-gap: 20px;
    margin-top: 40px;
    margin-bottom: 60px;
  }
</style>
