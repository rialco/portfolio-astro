const currentYear = new Date().getFullYear();
---

<footer>
  <div class='row'>
    <h3>rial-code</h3>
    <h1>Ricardo Alvarez-Correa's website</h1>
    <p>&copy; {currentYear} All rights reserved.</p>
  </div>
</footer>

<style>
  footer {
    min-height: 10vh;
    background-color: hsl(150, 20%, 25%);
  }

  footer > .row {
    color: white;
    text-align: center;
  }

  .row > h1 {
    font-size: 0.9em;
    margin-bottom: 10px;
    color: hsl(81, 20%, 80%);
  }

  .row > h3 {
    font-size: 1.3em;
    padding-top: 20px;
    margin-bottom: 10px;
  }

  .row > p {
    padding-bottom: 20px;
  }
</style>
