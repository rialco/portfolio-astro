---
import { Icon } from 'astro-icon/components';
interface Props {
  text: string;
  type?: 'submit' | 'button' | 'reset' | null;
  className?: string;
  icon?: string;
}

const { text, type, className, icon } = Astro.props;
---

<button type={type} class={'btn ' + className}>
  {icon ? <Icon name={icon} class='mr-10' /> : null}
  {text}
</button>

<style>
  .btn {
    display: block;
    width: 500px;
    height: 50px;
    border: none;
    background-color: hsl(0, 0%, 0%);
    color: white;

    font-size: 1em;
    font-weight: 600;
    border-radius: 4px;
  }

  .mr-10 {
    margin-right: 10px;
  }
</style>
