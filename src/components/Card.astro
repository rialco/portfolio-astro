---
interface Props {
  project: string;
  imagePath: string;
}

const { project, imagePath } = Astro.props;
---

<div class='card'>
  <div class='card-info-overlay'>
    <h3>{project}</h3>
  </div>
  <img src={imagePath} alt='Temporary' />
  <h3>{project}</h3>
</div>

<style>
  .card {
    position: relative;
    background-color: white;
    box-shadow: 0px 4px 8px 0px hsla(0, 0%, 0%, 0.1);
    border: 2px solid hsla(0, 0%, 0%, 0);
    transition: ease-in-out 0.5s;
    border-radius: 10px;
    cursor: pointer;

    .card-info-overlay {
      position: absolute;
      border-radius: inherit;
      background-color: white;
      width: 100%;
      height: 100%;
      z-index: 1;
      opacity: 0;
      transition: ease-in-out 0.5s;
    }

    h3 {
      text-align: center;
      font-weight: 600;
      font-size: 0.97em;
      margin-top: 20px;
      margin-bottom: 30px;
    }

    img {
      width: 400px;
      border-radius: 10px 10px 0px 0px;
    }
  }

  .card:hover {
    border: 2px solid hsla(0, 0%, 0%, 0.8);

    .card-info-overlay {
      opacity: 1;
    }
  }
</style>
