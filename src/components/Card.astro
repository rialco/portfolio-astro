---
interface Props {
  project: string;
  imagePath: string;
}

const { project, imagePath } = Astro.props;
---

<div class='card'>
  <img src={'https://via.placeholder.com/400x250.png?text=placeholder'} alt={'Temporary'} />
  <h3>{project}</h3>
</div>

<style>
  .card {
    background-color: white;
    box-shadow: 0px 4px 8px 0px hsla(0, 0%, 0%, 0.02);

    h3 {
      text-align: center;
      font-weight: 600;
      font-size: 0.97em;
      margin-top: 20px;
      margin-bottom: 30px;
    }

    img {
      width: 400px;
    }
  }
</style>
