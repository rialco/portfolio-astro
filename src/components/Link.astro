---
import { Icon } from 'astro-icon/components';
interface Props {
  text: string;
  href: string;
  target: '_blank' | '_parent' | '_self' | '_top';
  className?: string;
  icon?: string;
}

const { text, className, href, target, icon } = Astro.props;
---

<a class={`link ${className}`} href={href} target={target}>
  {icon ? <Icon name={icon} class='mr-10' /> : null}
  {text}
</a>

<style>
  .link {
    display: block;
    height: 40px;
    padding: 0px 20px;
    border-radius: 4px;

    text-decoration: none;
    font-size: 1rem;
  }

  .mr-10 {
    margin-right: 10px;
  }

  .about-link {
    display: flex;
    align-items: center;
    width: fit-content;

    background-color: hsl(210, 69%, 48%);
    color: white;
    margin-right: 20px;
    transition: 0.2s ease-in-out;
    margin-bottom: 10px;
  }

  .about-link:hover {
    background-color: hsl(210, 69%, 18%);
  }

  .about-link > svg {
    font-size: 1.2rem;
  }
</style>
