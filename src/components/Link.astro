---
import { Icon } from 'astro-icon/components';
interface Props {
  text: string;
  href: string;
  target: '_blank' | '_parent' | '_self' | '_top';
  className?: string;
  icon?: string;
}

const { text, className, href, target, icon } = Astro.props;
---

<a class={'btn ' + className} href={href} target={target}>
  {icon ? <Icon name={icon} class='mr-10' /> : null}
  {text}
</a>

<style>
  .btn {
    display: block;
    width: 500px;
    height: 50px;
    border: none;
    background-color: hsl(0, 0%, 0%);
    color: white;

    font-size: 1em;
    font-weight: 600;
    border-radius: 4px;
  }

  .mr-10 {
    margin-right: 10px;
  }
</style>
